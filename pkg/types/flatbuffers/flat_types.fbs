namespace flatgen.game;

enum EventKind:ubyte {
    NilEvent,
    PlayerHello,
    PlayerQuit,
    PlayerJoined,
    PlayerJoinedList,
    PlayerHelloConfirm,
    PlayerMovedList,
    PlayerMoved,
}

table BunicaEvent {
    kind: EventKind;
    id: int;
    bunica: int;
    bunica2: int;
    bunica3: int;
    bunica4: int;
    bunica5: int;
}

struct Player {
    id: int;
    x: int;
    y: int;
    speed: int;
    moving_left: bool;
    moving_right: bool;
    moving_up: bool;
    moving_down: bool;
}

table PlayerQuit {
	id: int;
}

table PlayerJoined {
	player: Player;
}

table PlayerJoinedList {
	players: [Player];
}

table PlayerHello {
	id: int;
}

table PlayerHelloConfirm {
	id: int;
}

table PlayerMovedList {
    players: [Player];
}

table PlayerMoved {
	player: Player;
}

table Event {
    kind: EventKind;
    data: [ubyte];
}

table KindHolder {
    kind: EventKind;
}

table RawEvent {
    raw_data: [ubyte];
}

table EventList {
    events: [RawEvent];
}

root_type EventList;